{% comment %} {% capture powered_by_link %} {{ 'footer.powered_by' | t }} <a href="https://www.shopify.com/" rel="noopener" target="_blank" rel="nofollow">Shopify</a>.{% endcapture %} {% endcomment %}

<div class="footer-copyright">
  {% comment %} <span>&copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: routes.root_url }}.</span>
  <span>{{ powered_by_link }}</span> {% endcomment %}

  {%- for link in linklists[section.settings.bottom_menu].links -%}
    <a href="{{ link.url }}" class="footer-copyright__link">{{ link.title | strip_html | escape }}</a>
  {%- endfor -%}
</div>

<div class="footer-copyright footer-copyright--secondary">
  {%- for link in linklists[section.settings.bottom_menu_2].links -%}
    <a href="{{ link.url }}" class="footer-copyright__link">{{ link.title | strip_html | escape }}</a>
  {%- endfor -%}
</div>